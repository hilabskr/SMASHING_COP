@{
    Layout = "_Layout0";
}

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>로그인</b>
            <div class="login_logo"><img src="/dist/img/login.png"></div>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">로그인 이후 이용하세요.</p>

            <form action="login" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="ID" name="AdminId">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="AdminPassword">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" name="IsPersistent" value="on"> 로그인상태 유지
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-success btn-block btn-flat">로그인</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

